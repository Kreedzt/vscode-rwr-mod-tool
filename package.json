{
  "name": "vscode-rwr-mod-tool",
  "displayName": "RWR Mod Tool",
  "description": "Running with Rifles game mod tool",
  "version": "0.4.0",
  "publisher": "Kreedzt",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#4A5D5E",
    "theme": "light"
  },
  "pricing": "Free",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Other"
  ],
  "keywords": [
    "Running with Rifles",
    "rwr",
    "mod",
    "AngelScript"
  ],
  "activationEvents": [
    "workspaceContains:**/calls/all_calls.xml",
    "workspaceContains:**/factions/all_factions.xml",
    "workspaceContains:**/items/all_carry_items.xml",
    "workspaceContains:**/weapons/all_weapons.xml"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "repository": {
    "url": "https://github.com/Kreedzt/vscode-rwr-mod-tool"
  },
  "contributes": {
    "configuration": {
      "id": "rwrmt",
      "title": "RWR Mod Tool",
      "type": "object",
      "properties": {
        "rwrmt.gameFolder": {
          "type": "string",
          "markdownDescription": "%rwrmt.settings.gameFolder.title%"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-rwr-mod-tool.createArmor",
        "title": "%rwrmt.cmd.createArmor%"
      },
      {
        "command": "vscode-rwr-mod-tool.createWeapon",
        "title": "%rwrmt.cmd.createWeapon%"
      },
      {
        "command": "vscode-rwr-mod-tool.formatActiveFile",
        "title": "%rwrmt.cmd.formatActiveFile%"
      },
      {
        "command": "vscode-rwr-mod-tool.formatWorkspace",
        "title": "%rwrmt.cmd.formatWorkspace%"
      },
      {
        "command": "vscode-rwr-mod-tool.showFileFormatOutput",
        "title": "%rwrmt.cmd.showFileFormatOutput%"
      }
    ],
    "snippets": [
      {
        "language": "xml",
        "path": "./snippets/call.json"
      },
      {
        "language": "xml",
        "path": "./snippets/faction.json"
      },
      {
        "language": "xml",
        "path": "./snippets/item.json"
      },
      {
        "language": "xml",
        "path": "./snippets/language.json"
      },
      {
        "language": "xml",
        "path": "./snippets/map.json"
      },
      {
        "language": "xml",
        "path": "./snippets/model.json"
      },
      {
        "language": "xml",
        "path": "./snippets/vehicle.json"
      },
      {
        "language": "xml",
        "path": "./snippets/weapon.json"
      },
      {
        "language": "xml",
        "path": "./snippets/misc.json"
      }
    ],
    "walkthroughs": [
      {
        "id": "tutorial",
        "title": "%rwrmt.tutorial.title%",
        "description": "%rwrmt.tutorial.description%",
        "steps": [
          {
            "id": "run-command",
            "title": "%rwrmt.runcmd.title%",
            "description": "%rwrmt.runcmd.description%",
            "media": {
              "image": "./media/commands.png",
              "altText": "%rwrmt.runcmd.alt%"
            }
          },
          {
            "id": "file-ref-check",
            "title": "%rwrmt.checkFileRef.title%",
            "description": "%rwrmt.checkFileRef.description%",
            "media": {
              "image": "./media/file-ref-check.png",
              "altText": "%rwrmt.checkFileRef.alt%"
            },
            "completionEvents": ["onCommand:vscode-rwr-mod-tool.openConfig", "onSettingChanged:rwrmt.gameFolder"]
          },
          {
            "id": "snippets",
            "title": "%rwrmt.snippets.title%",
            "media": {
              "image": "./media/snippets.png",
              "altText": "%rwrmt.snippets.alt%"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "package": "pnpm run compile && pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/l10n-dev": "^0.0.31",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@prettier/plugin-xml": "^3.2.2",
    "@vscode/l10n": "^0.0.18",
    "fast-xml-parser": "^4.2.7",
    "lodash": "^4.17.21",
    "prettier": "^3.1.1"
  }
}
